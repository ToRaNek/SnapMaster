    "version": "1.0.0",
    "folders": {
        "default_screenshots": "C:\\Users\\admin\\Pictures\\SnapMaster",
        "custom_folders": {
            "Spotify": "C:\\Users\\admin\\Pictures\\SnapMaster\\Spotify",
            "Discord": "C:\\Users\\admin\\Pictures\\SnapMaster\\Discord",
            "Firefox": "C:\\Users\\admin\\Pictures\\SnapMaster\\Firefox"
        }
    },
    "applications": {
        "app_folder_mapping": {
            "Spotify.exe": "Spotify",
            "Discord.exe": "Discord",
            "firefox.exe": "Firefox"
        },
        "monitored_apps": [
            "Spotify",
            "Spotify.exe",
            "Discord.exe",
