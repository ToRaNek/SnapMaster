        "theme": "light",
        "show_notifications": true,
        "minimize_to_tray": true,
        "auto_start": false,
        "language": "fr"
    },
    "memory_settings": {
        "auto_cleanup": true,
        "memory_threshold_mb": 500,
        "cleanup_interval_seconds": 30
    },
    "advanced": {
        "debug_mode": true,
        "log_level": "INFO",
        "backup_settings": true
    }
